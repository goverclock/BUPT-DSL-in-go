var (
	in string
	username string
	balance float
	test int
)

begin {
	save(username,"G")
	save(balance,100.0)
	say("请问您有什么问题?")
	input(in)
	switch in {
		"你好" goto(hello)
		"余额" goto(check)
		"充值" goto(charge)
		"再见" goto(goodbye)
		default goto(unknown)
	}
}

unknown {
	say("我不知道应该怎么答复您.")
	goto(begin)
}

hello {
	say("见到您很高兴，${username}，有什么可以帮到您?")
	goto(begin)
}

check {
	say("您的余额为${balance}")
	goto(begin)
}

charge {
	say("充值的金额为?")

	input(in)
	add(balance,in)

	say("您已充值${in}元,余额${balance}元.")
	goto(begin)
}

goodbye {
	say("再见,${username},祝您生活愉快.")
}
